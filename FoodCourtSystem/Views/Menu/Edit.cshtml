@model FoodCourtSystem.Models.ProductModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section css {
    <link rel="stylesheet" href="../../Content/adjustmenu.css" />
}
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">s
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add new item</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group" style="display: none;">
                        <input id="id" type="number" class="form-control" placeholder="id" />
                    </div>
                    <div class="form-group">
                        <input id="name" type="text" class="form-control" placeholder="Name" />
                        <small id="nameHelp" style="display:none;" class="text-danger">
                            Name must not be
                            empty
                        </small>
                    </div>

                    <div class="form-group">
                        <input id="price" type="number" class="form-control" placeholder="Price" />
                    </div>

                    <div class="form-group">
                        <input id="description" type="text" class="form-control" placeholder="Description" />
                    </div>

                    <div class="form-group">
                        <label for="exampleFormControlFile1">Choose image</label>
                        <input id="image" type="file" class="form-control-file" />
                    </div>
                </form>

                <div id="message">
                    <!--message -->
                </div>


                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                    <button id="save-item" type="button" class="btn btn-success" onclick="saveItem()">
                        Save
                        changes
                    </button>
                    <button id="add-item" type="button" class="btn btn-success" onclick="addItem()">Add</button>
                </div>
            </div>
        </div>
        <!-- ------- -->
    </div>
</div>

@section scripts {
    <script defer src="../../Scripts/adjustmenu.js"></script>
}