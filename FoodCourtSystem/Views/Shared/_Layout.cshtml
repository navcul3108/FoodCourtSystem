<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("css",false)
    @RenderSection("login", false)

</head>
<body>
    <div class="navbar navbar-expand-lg navbar-fixed-top navbar-light bg-light m-0 p-0">
        <div class="collapse navbar-collapse navbar-modification" id="navbarSupportedContent">
            <div class="navbar-header">
                @Html.ActionLink("K2L", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li style="font-size: 2rem;">@Html.ActionLink("Liên hệ", "Contact", "Home")</li>
                    <li style="font-size: 2rem;">@Html.ActionLink("Thông tin", "About", "Home")</li>

                </ul>
                @Html.Partial("_LoginPartial")
            </div>

        </div>
    </div>
   

    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
